<div class="data-form">
    <form class="form-signin" action="/users/update" method="POST">
      <h2 class="form-signin-heading">Edit User</h2>
    <div class="form-group">
        <label for="inputName" >First Name</label>
        
        <input type="text" name="firstName" id="inputName" class="form-control" value="<%= user.firstname %>" autofocus>
    </div>
    <div class="form-group">
      <label for="inputName" >Last Name</label>
      <input type="text" name="lastName" id="inputName" class="form-control" value="<%= user.lastname %>" autofocus>
  </div>
  <div class="form-group">
    <label for="inputName" >User Name</label>
    <input type="text" name="userName" id="inputName" minlength="5" class="form-control" value="<%= user.username %>" autofocus>
</div>
    <div class="form-group">    
      <label for="inputEmail">Email address</label>
      <input type="email" name="email" id="inputEmail" class="form-control" value="<%= user.email %>" required>
    </div>
    <div class="form-group">
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" minlength="5" class="form-control" value="<%= user.password %>" required>
      </div>
    <% if (locals.currentUser) { %>
        <% if (currentUser.isAdmin) { %>
            <label for="admin-checkbox">Is Admin? (You might not want to change this on your own profile, since you are an admin.</label>
            <input id="admin-checkbox" name="isAdmin" type="checkbox" value="<%= user.isAdmin %>">
        <% } %>
        <% } else { %>
          <input id="admin-checkbox" name="isAdmin" type="hidden" value=false %>">
    <% } %>
      <br />
      <input id="id" name="id" type="hidden" value="<%= user._id%>">
      <button class="btn btn-lg btn-primary btn-block" type="submit">Update User</button>
    </form>
  </div>