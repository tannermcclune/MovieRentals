<%- include('../partials/_movieNav.ejs') %>
<div class="data-form">
    <form class="form-signin" action="/movies/<%= movie._id%>/update" method="POST">
      <h2 class="form-signin-heading"><%= movie.title %></h2>
      
    <div class="form-group">
        <label for="title" >Title</label>
        <input type="text" name="title" id="title" class="form-control" value="<%= movie.title %>" autofocus required>
    </div>

    <div class="form-group">
      <label for="director" >Director</label>
      <input type="text" name="director" id="director" class="form-control" value="<%= movie.director %>" >
  </div>

  <div class="form-group">
    <label for="description" >Description</label>
    <input type="text" name="description" id="description" class="form-control" value="<%= movie.description %>" >
</div>

    <div class="form-group">    
      <label for="genre">Genre</label>
        <select name="genre" id="genre" value="<%= movie.genre %>" required>
            <option value="Action">Action</option>
            <option value="Comedy">Comedy</option>
            <option value="Drama">Drama</option>
            <option value="Fantasy">Fantasy</option>
            <option value="Horror">Horror</option>
            <option value="Mystery">Mystery</option>
            <option value="Romance">Romance</option>
            <option value="Thriller">Thriller</option>
            <option value="Western">Western</option>
            <option value="Other">Other</option>
        </select>
    </div>

    <div class="form-group">
        <label for="runtime">Runtime</label>
        <input type="number" name="runtime" id="runtime" class="form-control" value="<%= movie.runtime %>">
      </div>

      <div class="form-group">
        <label for="price">Price To Rent</label>
        <input type="number" name="price" id="price" class="form-control" value="<%= movie.price %>">
      </div>

      <br />
      <button class="btn btn-lg btn-primary btn-block" type="submit">Update</button>
    </form>
  </div>
